                        </div>
                    </div> *@
                    <div class="register-link m-t-15 text-center">
                       @*  <p>Already have account ? <a href="#"> Sign in</a></p> *@
                        <p>Already have account ? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"> Sign in</a></p>
                        @* <a class="link-secondary text-decoration-none" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already a  user?</a> *@
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>














