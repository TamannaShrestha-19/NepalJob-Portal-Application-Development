@model NepalJobPortal.Models.OrganizationViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}

<link rel="stylesheet" href="~/dashboardcontent/css/lib/datatable/dataTables.bootstrap.min.css">
<script src="~/dashboardcontent/js/lib/data-table/datatables.min.js"></script>
<script src="~/dashboardcontent/js/lib/data-table/dataTables.bootstrap.min.js"></script>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1><a asp-action="Create">Create New</a></h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Organization</a></li>
                            <li class="active">List</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Organization List</strong>
            </div>
            <div class="card-body">
                <table id="bootstrap-data-table" class="table table-striped table-bordered" ">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>
                @Html.DisplayNameFor(model => model.OrgName)
                            </th>
                            <th>
                @Html.DisplayNameFor(model => model.OrgAddress)
                            </th>
                            <th>
                @Html.DisplayNameFor(model => model.OrgContact)
                            </th>
                            <th>
                @Html.DisplayNameFor(model => model.OrgEmail)
                            </th>
                            <th>Logo</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model.OrganizationList)
                {
                            <tr>
                                <td>@i</td>
                                <td>
                            @Html.DisplayFor(modelItem => item.OrgName)
                                </td>
                                <td>
                            @Html.DisplayFor(modelItem => item.OrgAddress)
                                </td>
                                <td>
                            @Html.DisplayFor(modelItem => item.OrgContact)
                                </td>
                                <td>
                            @Html.DisplayFor(modelItem => item.OrgEmail)
                                </td>
                                <td>
                                    <img src="@item.OrgImage.Replace(" ~", "")" width="100px" height="100px">
                                </td>
                                <td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.OrgId }) |
                            @* @Html.ActionLink("Details", "Details", new { id=item.OrgId }) | *@
                            @Html.ActionLink("Delete", "Delete", new { id=item.OrgId })
                                </td>
                            </tr>
                    i++;
                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table').DataTable();
    });
</script>