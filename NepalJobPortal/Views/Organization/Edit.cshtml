@model NepalJobPortal.Models.OrganizationViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Organization</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Organization</a></li>
                            <li><a href="@Url.Action("Index","Organization")">List</a></li>
                            <li class="active">Edit</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-9">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="card">
                <div class="card-header"><strong>Update Organization</strong></div>
                <div class="card-body card-block">
                    <input asp-for="OrgId" class="form-control" hidden="hidden"/>
                    <div class="form-group">
                        <label class="form-control-label">Organization Name</label>
                        <input asp-for="OrgName" placeholder="Enter your organization name" class="form-control" />
                        <span asp-validation-for="OrgName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Organization Address</label>
                        <input asp-for="OrgAddress" placeholder="Enter your organization address" class="form-control" />
                        <span asp-validation-for="OrgAddress" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Organization Contact</label>
                        <input asp-for="OrgContact" class="form-control" />
                        <span asp-validation-for="OrgContact" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Organization Email</label>
                        <input asp-for="OrgEmail" class="form-control" />
                        <span asp-validation-for="OrgEmail" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Image </label>
                        <div class="col-sm-6">
                            @if (Model.OrgImage != null)
                            {
                                <img src="@Model.OrgImage.Replace(" ~", "")" width="100px" height="100px">
                            }
                            <input type="file" name="file" />
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>






