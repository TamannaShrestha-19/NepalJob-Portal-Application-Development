@model NepalJobPortal.Models.JobDescriptionViewModel

@* @using Microsoft.Extensions.DependencyInjection *@
@inject IServiceProvider ServiceProvider
@using NepalJobPortal.Utilities;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    Func<IEnumerable<SelectListItem>> getVendorList = () => CommonUtilities.GetVendorList(ServiceProvider);
    Func<IEnumerable<SelectListItem>> getCategoryList = () => CommonUtilities.GetCategoryList(ServiceProvider);
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Job List</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Job</a></li>
                            <li><a href="@Url.Action("Index","JobDescription")">List</a></li>
                            <li class="active">Create</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-9">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header"><strong>Create Job List</strong></div>
                <div class="card-body card-block">
                   
                    @if(User.IsInRole("SuperAdmin"))
                    {
                        <div class="form-group">
                            <label for="orgName">Select Vendor</label>
                            @Html.DropDownListFor(model=>model.vendorOrgId, getVendorList(), "-- Select --", new { @class = "form-control show-tick", @id = "orgName" })
                        </div>
                    }
                    
                    <div class="form-group">
                        <label for="orgName">Select Category</label>
                        @Html.DropDownListFor(model=>model.CategoryId, getCategoryList(), "-- Select --", new { @class = "form-control show-tick", @id = "orgName" })
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Job Type</label>
                        <input asp-for="JobType" class="form-control" />
                        <span asp-validation-for="JobType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Level</label>
                        <input asp-for="Level" class="form-control" />
                        <span asp-validation-for="Level" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Vacancy No</label>
                        <input asp-for="VacancyNo" class="form-control" />
                        <span asp-validation-for="VacancyNo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Employee Type</label>
                        <input asp-for="EmployeeType" class="form-control" />
                        <span asp-validation-for="EmployeeType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Job Location</label>
                        <input asp-for="JobLocation" class="form-control" />
                        <span asp-validation-for="JobLocation" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Offered Salary</label>
                        <input asp-for="OfferedSalary" class="form-control" />
                        <span asp-validation-for="OfferedSalary" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">DeadLine</label>
                        <input asp-for="DeadLine" class="form-control" />
                        <span asp-validation-for="DeadLine" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Education Level</label>
                        <input asp-for="EducationLevel" class="form-control" />
                        <span asp-validation-for="EducationLevel" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">Experience Required</label>
                        <input asp-for="ExperienceRequired" class="form-control" />
                        <span asp-validation-for="ExperienceRequired" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">Other Specification</label>
                        <textarea asp-for="OtherSpecification" class="form-control"></textarea>
                        <span asp-validation-for="OtherSpecification" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-control-label">JobWork Description</label>
                        <textarea asp-for="JobWorkDescription" class="form-control"></textarea>
                        <span asp-validation-for="JobWorkDescription" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>
